{
    "name": "vizir-test",
    "description": "Test for vizir job application",
    "version": "1.0.0",
    "jest": {
        "roots": [
            "./tests"
        ],
        "transform": {
            "^.+\\.[jt]sx?$": "ts-jest"
        },
        "collectCoverage": true,
        "collectCoverageFrom": [
            "./src/**/*.ts"
        ],
        "testURL": "http://localhost:3000"
    },
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon index.js",
        "unit-test": "jest -t=\\[Unit\\]",
        "integration-test": "jest -t=\\[Integration\\]",
        "ui-test": "jest -t=\\[UI\\]",
        "test": "jest",
        "dev-build": "webpack --env.NODE_ENV=development",
        "dev-watch": "webpack --env.NODE_ENV=development --watch",
        "prod-build": "webpack --env.NODE_ENV=production",
        "prod-watch": "webpack --env.NODE_ENV=production --watch",
        "docs": "rm docs -r && typedoc"
    },

    "dependencies": {
        "@material-ui/core": "^4.11.0",
        "axios": "^0.20.0",
        "dinero.js": "^1.8.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "mongodb": "^3.6.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "styled-components": "^5.1.1"
    }
}
